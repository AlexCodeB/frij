<FrijWindow>:

    canvas.before:
        Color:
            rgba: .3, .5, .7, 1
        Rectangle:
            pos:self.pos
            size:self.size

    Button:
        pos_hint:{"x":0.2, "y": 0.35}
        size_hint:0.6,0.2
        text: "Your Frij Inventory"
        on_release:
            app.root.current = "FrijInv"
            root.manager.transition.direction = "down"

    Button:
        pos_hint:{"x":0.2, "y": 0.55}
        size_hint:0.6,0.2
        text: "Add items to your Frij"
        on_release:
            app.root.current = "FrijInv"
            root.manager.transition.direction = "up"
            root.add_inv_button()


    Button:
        pos_hint:{"x":0,"y":0}
        size_hint: 0.4, 0.05
        font_size: (root.width**2 + root.height**2) / 19**4
        text: "Sign out"
        on_release:
            root.manager.transition.direction = "right"
            root.back()


